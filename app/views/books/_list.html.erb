
<div>
  <h2>User info</h2>
  <div>
      <%= attachment_image_tag user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg" %>
  </div>
   <table>
       <tbody>
         <tr>
            <td>name</td>
            <td><%= user.name %></td>
         </tr>
         <tr>
            <td>introduction</td>
            <td><%= user.introduction %></td>
         </tr>
       </tbody>
   </table>
  <div>
      <% if user.id == current_user.id %>
      <%= link_to "edit",edit_user_path(current_user.id) %>
      <% else %>
      <%= link_to "edit",user_path(current_user.id) %>
      <% end %>
  </div>
  <h2>New book</h2>
  <div>
<%= form_with model:book, url: books_path, method: :post, local:true do |f| %>
    <label><%= f.label :title %></label>
    <%= f.text_field :title %>
  </div>
  <div>
    <label><%= f.label :opinion %></label>
  <%= f.text_area :opinion %>
  </div>
  <div>
  <%= f.submit 'Create Book' %>
  </div>
</div>
<% end %>