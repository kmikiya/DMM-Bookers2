
<div class="col-md-3">
  <h2>User info</h2>
  <div>
      <%= attachment_image_tag user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg" %>
  </div>
   <table class="table" >
       <tbody>
         <tr>
            <th>name</th>
            <th><%= user.name %></th>
         </tr>
         <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
         </tr>
       </tbody>
   </table>
  <div>
      <% if user.id == current_user.id %>
      <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block btn-sm mt-4" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
      <% else %>
      <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary btn-block btn-sm mt-4" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
      <% end %>
  </div>
  <h2>New book</h2>

<%= form_with model:book, url: books_path, method: :post, local:true do |f| %>
  <div class="from-group">
    <label><%= f.label :title %></label>
    <%= f.text_field :title, class: "form-control book_title" %>
  </div>
  <div class="from-group">
    <label><%= f.label :opinion %></label>
  <%= f.text_area :opinion, class: "form-control book_title" %>
  </div>
  <div class="from-group">
  <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
</div>
<% end %>