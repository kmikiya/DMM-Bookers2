<div class="container px-5 px-sm-0">
  <div class="error_messages">
  <% if @book.errors.any? %>
  <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
  <lu><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </lu>
  <% end %>
  </div>
 <div class="row">
   <%= render 'books/list', book: @book, user: @user %>
   <div class="col-md-8 offset-md-1">
     <h2>Books</h2>

       <table class="table table-hover table-inverse">
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <% @books.each do |book| %>
             <tr>
               <%= link_to user_path(book.id) do %>
               <td><%= attachment_image_tag book.user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg", size:'50x50' %></td>
               <% end %>
               <td><%= link_to book.title, book_path(book.id) %></td> <!--blogモデル内のtitleカラムという意味-->
               <td><%= book.body %></td>
             </tr>
           <% end %>
         </tbody>
       </table>
   </div>
 </div>
 </div>
<!--ここから共通-->