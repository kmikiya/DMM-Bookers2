<div>
<h2>Books</h2>

<table>
  <thead>
    <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>

    <tr>
      <td><%= attachment_image_tag book.user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title, book_path(book.id) %></td> <!--blogモデル内のtitleカラムという意味-->
      <td><%= book.opinion %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<!--ここから共通-->
<%= render 'books/list', book: @book, user: @user %>