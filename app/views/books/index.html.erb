<div>
<h2>Books</h2>

<table>
  <thead>
    <tr>
        <td>Title</td>
        <td>Opinion</td>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td> <!--blogモデル内のtitleカラムという意味-->
      <td><%= book.opinion %></td>
<% end %>
    </tr>
  </tbody>
</table>
</div>
<!--ここから共通-->
<%= render 'books/list', book: @book, user: @user %>