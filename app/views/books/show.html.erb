<div class="container">
  <p id="notice"></p>
<div class="row">
  <%= render 'books/list', book: @book, user: @user_current %>
  <div class="col-md-8 offset-md-1">

    <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @user_show, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: '40x40' %><br>
              <%= link_to @user_show.name, user_path(@user_show.id) %>
            </td>
            <td><%= @book_show.title %></td>
            <td><%= @book_show.opinion %></td>
            <% if @book_show.user_id == current_user.id %>
              <td><%= link_to "Edit",edit_book_path(params[:id]), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Delete",book_path(params[:id]), method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？"  %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
  </div>
</div>
</div>