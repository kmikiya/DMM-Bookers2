<div>
<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag @user_show, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
        <%= link_to @user_show.name, user_path(@user_show.id) %>
      </td>
      <td>
        <%= @book_show.title %>
      </td>
      <td>
        <%= @book_show.opinion %>
      </td>
      <% if @book_show.user_id == current_user.id %>
        <td><%= link_to "Edit",edit_book_path(params[:id]) %></td>
        <td><%= link_to "Delete",book_path(params[:id]), method: :delete, "data-confirm" => "本当に削除しますか？"  %></td>
      <% end %>
    </tr>
  </tbody>
</table>
</div>


<%= render 'books/list', book: @book, user: @user_current %>