<div>
  <h3>Books</h3>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg" %>
        </td>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.opinion %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'books/list', book: @book, user: @user %>



